.side-bar
  .side-bar__user-name
    .side-bar__user-name--text
      .side-bar__user-name--text--box
        = current_user.name
      .side-bar__user-name--text--icon
        = link_to new_group_path do
          = icon('far', 'edit', class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  %ul.group-list
    - current_user.groups.each do |group|
      %li.group
        = link_to group_messages_path(group) do
          %p.group__group--name
            = group.name
          %p.group__group--message
            = group.show_last_message